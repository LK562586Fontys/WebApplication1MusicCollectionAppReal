@page
@model WebApplication1MusicCollectionAppReal.Pages.Home
@{
	ViewData["Title"] = "HomeScreen";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's SCREEN</p>

<form method="get">
    <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Search songs..." />
    <button type="submit">Search</button>
</form>

@if (Model.Songs != null && Model.Songs.Any())
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Artist</th>
                <th>Album</th>
                <th>Release Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model.Songs)
            {
                <tr>
                    <td>@song.Name</td>
                    <td>@song.Artist?.Name</td>
                    <td>@song.Album?.Name</td>
                    <td>@song.DateReleased.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    <p>No songs found matching "@Model.SearchTerm".</p>
}